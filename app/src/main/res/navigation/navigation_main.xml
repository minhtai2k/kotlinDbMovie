<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:label=""
        android:name="com.example.moviebasics.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_typeFragment"
            app:destination="@id/typeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.moviebasics.detailmovie.DetailFragment"
        android:label=""
        tools:layout="@layout/fragment_detail">

        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/typeFragment"
        android:name="com.example.moviebasics.typemovie.TypeFragment"
        android:label="Genre Movies"
        tools:layout="@layout/fragment_type_movie">

        <action
            android:id="@+id/action_typeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <argument
            android:name="genreId"
            app:argType="integer"
            app:nullable="false" />
        <action
            android:id="@+id/action_typeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>